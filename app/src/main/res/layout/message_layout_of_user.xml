<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/receiver_message_text_color"
        android:text="Recive Message"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/message_profile_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/sender_message_text_color"
        android:text="Send Message"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="8dp"/>

</RelativeLayout>